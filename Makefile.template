CXX = g++
# Add your X11 include location to CXXFLAGS if you are using X11 on your own machine
# e.g. on Apple Silicon Macs, this is /opt/X11/include/X11. On Ubuntu, this is /usr/include/X11
CXXFLAGS = -std=c++20 -Wall -Werror=vla -MMD -I blocks -I factory
EXEC = biquadris
OBJECTS = main.o
DEPENDS = ${OBJECTS:.o=.d}

${EXEC}: ${OBJECTS}
	${CXX} ${CXXFLAGS} ${OBJECTS} -o ${EXEC} -lX11

-include ${DEPENDS}

.PHONY: clean

clean:
	rm ${OBJECTS} ${EXEC} ${DEPENDS}
